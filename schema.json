{
    "users": {
        "$uid": {
            "uid": "string",
            "displayName": "string",
            "email": "string",
            "phoneNumber": "string",
            "photoURL": "string",
            "status": "string",
            "lastSeen": "timestamp",
            "chats": {
                "$chatId": {
                    "isPinned": "boolean",
