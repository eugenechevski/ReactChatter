{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*",
        "./src/*",
      ],
      "@/assets/*": [
        "./assets/*",
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ]
}
